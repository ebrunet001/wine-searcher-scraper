{
    "actorSpecification": 1,
    "name": "wine-searcher-scraper",
    "title": "Wine Searcher Scraper",
    "description": "Scrapes wine data from wine-searcher.com using Crawlee + Firefox with anti-bot bypass techniques. Extracts wine names, prices, ratings, regions, and merchant information.",
    "version": "2.0",
    "buildTag": "latest",
    "meta": {
        "templateId": "js-crawlee-playwright-firefox"
    },
    "input": "./input_schema.json",
    "dockerfile": "./Dockerfile",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Wine data",
            "views": {
                "wines": {
                    "title": "Wines",
                    "transformation": {
                        "fields": [
                            "wineName",
                            "producer",
                            "region",
                            "vintage",
                            "price",
                            "currency",
                            "rating",
                            "merchantCount",
                            "url",
                            "scrapedAt"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "wineName": {
                                "label": "Wine Name",
                                "format": "text"
                            },
                            "producer": {
                                "label": "Producer",
                                "format": "text"
                            },
                            "region": {
                                "label": "Region",
                                "format": "text"
                            },
                            "vintage": {
                                "label": "Vintage",
                                "format": "text"
                            },
                            "price": {
                                "label": "Price",
                                "format": "number"
                            },
                            "rating": {
                                "label": "Rating",
                                "format": "number"
                            }
                        }
                    }
                }
            }
        }
    }
}
